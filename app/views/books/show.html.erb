<h1>User info</h1>
<div>
  <%= image_tag 'default_image.jpg' %>
</div>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<% if @user == current_user %>
  <%= link_to "user編集", edit_user_path(@user) %>
<% else %>
  <%= link_to "user編集", user_path(current_user.id) %>
<% end %>

<h1>New book</h1>
<%= form_with model: @newbook do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<p><%= image_tag 'default_image.jpg' %></p>
<p><%= @book.title %></p>
<p><%= @book.opinion %></p>
<% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>