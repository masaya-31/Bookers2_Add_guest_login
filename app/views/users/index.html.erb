<h1>User info</h1>
<div>
  <%= image_tag 'default_image.jpg' %>
</div>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<%= link_to "user編集", edit_user_path(@user) %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'default_image.jpg' %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to "show", user_path(user.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>